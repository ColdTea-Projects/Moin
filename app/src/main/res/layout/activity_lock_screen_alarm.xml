<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/moinBlueTone1">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:15"
            android:textSize="70sp"
            android:textColor="@color/moinBlueTone7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/weather"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="60dp"
            android:tint="@color/moinBlueTone3"
            app:layout_constraintTop_toBottomOf="@id/time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_baseline_wb_cloudy_70"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/alarm"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="120dp"
            android:tint="@color/moinBlueTone7"
            app:layout_constraintTop_toBottomOf="@id/weather"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_baseline_alarm_24"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dismiss"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="120dp"
            android:tint="@color/moinBlueTone7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/alarm"
            app:layout_constraintTop_toBottomOf="@id/weather"
            app:srcCompat="@drawable/ic_baseline_alarm_off_24" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/snooze"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="120dp"
            android:tint="@color/moinBlueTone7"
            app:layout_constraintEnd_toEndOf="@id/alarm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/weather"
            app:srcCompat="@drawable/ic_baseline_snooze_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>