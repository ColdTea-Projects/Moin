<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/moinBlueTone1">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/sunny"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="@dimen/margin_s"
        android:paddingTop="@dimen/margin_s"
        android:paddingEnd="@dimen/margin_s"
        app:layout_constraintHeight_percent=".25"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_playlist_item" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rainy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="@dimen/margin_s"
        android:paddingTop="@dimen/margin_s"
        android:paddingEnd="@dimen/margin_s"
        app:layout_constraintHeight_percent=".25"
        app:layout_constraintTop_toBottomOf="@id/sunny"
        app:srcCompat="@drawable/background_playlist_item" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cloudy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="@dimen/margin_s"
        android:paddingTop="@dimen/margin_s"
        android:paddingEnd="@dimen/margin_s"
        app:layout_constraintHeight_percent=".25"
        app:layout_constraintTop_toBottomOf="@id/rainy"
        app:srcCompat="@drawable/background_playlist_item" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/snowy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/margin_s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent=".25"
        app:srcCompat="@drawable/background_playlist_item" />
</androidx.constraintlayout.widget.ConstraintLayout>
