<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/moinBlueTone1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/alarm_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingBottom="70dp"
            android:clipToPadding="false"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/set_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="661dp"
            android:backgroundTint="@color/moinOrange2"
            app:borderWidth="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/alarm_list"
            app:layout_constraintEnd_toEndOf="@+id/alarm_list"
            app:layout_constraintStart_toStartOf="@+id/alarm_list"
            app:rippleColor="@color/moinOrange3"
            app:srcCompat="@drawable/ic_baseline_add_alarm_24"
            app:tint="@color/moinBlueTone1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>