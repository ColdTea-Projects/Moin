<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/moinGrayTone1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/alarm_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/set_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginEnd="341dp"
            android:layout_marginBottom="661dp"
            android:backgroundTint="@color/moinBlueTone2"
            app:rippleColor="@color/moinBlueTone4"
            app:tint = "@color/moinBlueTone1"
            app:borderWidth="0dp"
            app:srcCompat="@drawable/ic_plus_24"
            app:layout_constraintBottom_toBottomOf="@+id/alarm_list"
            app:layout_constraintEnd_toEndOf="@+id/alarm_list" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>